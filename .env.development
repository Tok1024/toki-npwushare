# ================================
# NWPUShare 开发环境配置
# ================================

# 数据库配置（PostgreSQL）
KUN_DATABASE_URL="postgresql://toki:tokipass@localhost:5432/tokidb?schema=public"

# Redis 配置
REDIS_HOST='127.0.0.1'
REDIS_PORT='6379'

# JWT 配置
JWT_ISS='nwpushare'
JWT_AUD='nwpushare_admin'
JWT_SECRET='your-super-secret-jwt-key-change-this-in-production'

# 站点地址
NEXT_PUBLIC_KUN_PATCH_ADDRESS_DEV="http://127.0.0.1:3000"
NEXT_PUBLIC_KUN_PATCH_ADDRESS_PROD="http://127.0.0.1:3000"
KUN_VISUAL_NOVEL_SITE_URL="http://127.0.0.1:3000"

# 开发环境配置
NODE_ENV="development"
HOSTNAME="127.0.0.1"

# ================================
# 开发模式：禁用功能开关
# ================================

# 禁用人机验证（开发环境必须设置为 true）
NEXT_PUBLIC_DISABLE_CAPTCHA=true

# 禁用邮件发送（验证码会打印到控制台）
KUN_DISABLE_EMAIL=true

# 开发环境验证码（当 KUN_DISABLE_EMAIL=true 时使用）
KUN_VERIFICATION_CODE=1234567

# ================================
# 邮件配置（可选，生产环境需要）
# ================================
# KUN_VISUAL_NOVEL_EMAIL_FROM="NWPUShare"
# KUN_VISUAL_NOVEL_EMAIL_HOST="smtp.example.com"
# KUN_VISUAL_NOVEL_EMAIL_PORT='587'
# KUN_VISUAL_NOVEL_EMAIL_ACCOUNT="noreply@example.com"
# KUN_VISUAL_NOVEL_EMAIL_PASSWORD="your-email-password"

# ================================
# S3 存储配置（可选，资源外链模式不需要）
# ================================
# KUN_VISUAL_NOVEL_S3_STORAGE_ACCESS_KEY_ID=""
# KUN_VISUAL_NOVEL_S3_STORAGE_SECRET_ACCESS_KEY=""
# KUN_VISUAL_NOVEL_S3_STORAGE_BUCKET_NAME=""
# KUN_VISUAL_NOVEL_S3_STORAGE_ENDPOINT=""
# KUN_VISUAL_NOVEL_S3_STORAGE_REGION=""
# NEXT_PUBLIC_KUN_VISUAL_NOVEL_S3_STORAGE_URL=""
