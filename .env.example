# ================================
# NWPUShare 环境变量配置示例
# ================================
# 复制此文件为 .env 并填入实际配置

# ================================
# 数据库配置
# ================================
# MySQL 数据库连接字符串
TOKI_DATABASE_URL="mysql://username:password@localhost:3306/nwpushare"

# ================================
# Redis 配置
# ================================
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"

# ================================
# JWT 配置
# ================================
JWT_ISS="nwpushare"
JWT_AUD="nwpushare_admin"
# ⚠️ 生产环境必须修改！使用 openssl rand -base64 32 生成
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ================================
# 站点地址配置
# ================================
# 开发环境地址
NEXT_PUBLIC_NWPUSHARE_ADDRESS_DEV="http://127.0.0.1:3000"
# 生产环境地址（改为你的实际域名）
NEXT_PUBLIC_NWPUSHARE_ADDRESS_PROD="https://your-domain.com"
# 站点 URL（用于邮件链接等）
TOKI_NWPUSHARE_SITE_URL="https://your-domain.com"

# ================================
# 运行环境配置
# ================================
NODE_ENV="development"
HOSTNAME="127.0.0.1"

# ================================
# 邮件配置（必需）
# ================================
# 发件人名称
TOKI_NWPUSHARE_EMAIL_FROM="NWPUShare"
# SMTP 服务器地址
TOKI_NWPUSHARE_EMAIL_HOST="smtp.example.com"
# SMTP 端口（通常 587 或 465）
TOKI_NWPUSHARE_EMAIL_PORT="587"
# 发件邮箱账号
TOKI_NWPUSHARE_EMAIL_ACCOUNT="noreply@example.com"
# 发件邮箱密码或授权码
TOKI_NWPUSHARE_EMAIL_PASSWORD="your-email-password"

# ================================
# Resend 邮件服务（可选，替代 SMTP）
# ================================
# 如果使用 Resend，配置以下项
# RESEND_API_KEY="re_xxxxxxxxxxxx"
# RESEND_FROM_EMAIL="NWPUShare <noreply@yourdomain.com>"

# ================================
# 开发模式开关（仅开发环境）
# ================================
# 禁用人机验证（开发时可设为 true）
NEXT_PUBLIC_DISABLE_CAPTCHA=false
# 禁用邮件发送（验证码打印到控制台）
KUN_DISABLE_EMAIL=false
# 开发环境固定验证码（当 KUN_DISABLE_EMAIL=true 时使用）
KUN_VERIFICATION_CODE=1234567

# ================================
# S3 对象存储配置（必需）
# ================================
# Access Key ID
TOKI_NWPUSHARE_S3_STORAGE_ACCESS_KEY_ID="your-access-key-id"
# Secret Access Key
TOKI_NWPUSHARE_S3_STORAGE_SECRET_ACCESS_KEY="your-secret-access-key"
# Bucket 名称
TOKI_NWPUSHARE_S3_STORAGE_BUCKET_NAME="your-bucket-name"
# S3 Endpoint（如 AWS: s3.amazonaws.com，阿里云 OSS: oss-cn-hangzhou.aliyuncs.com）
TOKI_NWPUSHARE_S3_STORAGE_ENDPOINT="s3.amazonaws.com"
# Region（如 us-east-1、cn-hangzhou 等）
TOKI_NWPUSHARE_S3_STORAGE_REGION="us-east-1"
# 公开访问 URL
NEXT_PUBLIC_TOKI_NWPUSHARE_S3_STORAGE_URL="https://your-cdn-domain.com"

# ================================
# 图床配置（必需）
# ================================
# 图床域名（用于 Next.js Image 组件）
TOKI_NWPUSHARE_IMAGE_BED_HOST="your-image-cdn.com"
# 图床 URL 前缀
TOKI_NWPUSHARE_IMAGE_BED_URL="https://your-image-cdn.com"

# ================================
# Cloudflare 缓存配置（可选）
# ================================
# Cloudflare Zone ID
KUN_CF_CACHE_ZONE_ID=""
# Cloudflare API Token
KUN_CF_CACHE_PURGE_API_TOKEN=""

# ================================
# IndexNow 配置（可选，用于搜索引擎收录）
# ================================
TOKI_NWPUSHARE_INDEX_NOW_KEY=""

# ================================
# 测试站点标识（可选）
# ================================
# 用于测试环境，设置为 "noindex" 阻止搜索引擎收录
TOKI_NWPUSHARE_TEST_SITE_LABEL=""
